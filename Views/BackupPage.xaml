<Page x:Class="AuroraInvoice.Views.BackupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      mc:Ignorable="d"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="Backup &amp; Restore">

    <Grid Margin="40,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Backup &amp; Restore"
                      Style="{StaticResource HeaderText}"/>
            <TextBlock Text="Protect your data with local backups"
                      Style="{StaticResource SecondaryText}"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Create Backup -->
            <Border Grid.Column="0" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Create Backup"
                              Style="{StaticResource SubheaderText}"/>

                    <TextBlock Text="Database Location:"
                              FontWeight="SemiBold"
                              Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding DatabaseLocation}"
                              Style="{StaticResource SecondaryText}"
                              TextWrapping="Wrap"
                              Margin="0,0,0,16"/>

                    <TextBlock Text="Backup Folder:"
                              FontWeight="SemiBold"
                              Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                Text="{Binding BackupFolderPath}"
                                Style="{StaticResource ModernTextBox}"
                                IsReadOnly="True"/>

                        <Button Grid.Column="2"
                               Content="Browse..."
                               Style="{StaticResource SecondaryButton}"/>
                    </Grid>

                    <Button Content="Create Backup Now"
                           Style="{StaticResource ModernButton}"
                           HorizontalAlignment="Left"
                           Command="{Binding CreateBackupCommand}"/>

                    <TextBlock Text="{Binding LastBackupText}"
                              Style="{StaticResource SecondaryText}"
                              Margin="0,16,0,0"/>
                </StackPanel>
            </Border>

            <!-- Restore Backup -->
            <Border Grid.Column="2" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Restore from Backup"
                              Style="{StaticResource SubheaderText}"/>

                    <TextBlock Text="Available Backups:"
                              FontWeight="SemiBold"
                              Margin="0,0,0,8"/>

                    <ListBox ItemsSource="{Binding Backups}"
                            SelectedItem="{Binding SelectedBackup}"
                            DisplayMemberPath="Name"
                            Height="300"
                            Margin="0,0,0,16"/>

                    <Button Content="Restore Selected Backup"
                           Style="{StaticResource ModernButton}"
                           HorizontalAlignment="Left"
                           Command="{Binding RestoreBackupCommand}"/>

                    <TextBlock Text="Warning: Restoring will replace current data"
                              Foreground="{StaticResource DangerBrush}"
                              FontSize="12"
                              Margin="0,8,0,0"/>

                    <Button Content="Refresh List"
                           Style="{StaticResource SecondaryButton}"
                           HorizontalAlignment="Left"
                           Margin="0,16,0,0"
                           Command="{Binding RefreshBackupsListCommand}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>