<Page x:Class="AuroraInvoice.Views.InvoicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      mc:Ignorable="d"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="Invoices">

    <Grid Margin="40,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Invoices"
                      Style="{StaticResource HeaderText}"/>
            <TextBlock Text="Create and manage professional invoices"
                      Style="{StaticResource SecondaryText}"/>
        </StackPanel>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource Card}" Padding="16">
                <StackPanel>
                    <TextBlock Text="Total Invoiced"
                              Style="{StaticResource SecondaryText}"
                              FontSize="12"/>
                    <TextBlock x:Name="TotalInvoicedText"
                              Text="$0.00"
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="{StaticResource PrimaryBrush}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource Card}" Padding="16">
                <StackPanel>
                    <TextBlock Text="Paid"
                              Style="{StaticResource SecondaryText}"
                              FontSize="12"/>
                    <TextBlock x:Name="TotalPaidText"
                              Text="$0.00"
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="{StaticResource SuccessBrush}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="4" Style="{StaticResource Card}" Padding="16">
                <StackPanel>
                    <TextBlock Text="Outstanding"
                              Style="{StaticResource SecondaryText}"
                              FontSize="12"/>
                    <TextBlock x:Name="TotalOutstandingText"
                              Text="$0.00"
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="{StaticResource WarningBrush}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="6" Style="{StaticResource Card}" Padding="16">
                <StackPanel>
                    <TextBlock Text="Overdue"
                              Style="{StaticResource SecondaryText}"
                              FontSize="12"/>
                    <TextBlock x:Name="TotalOverdueText"
                              Text="$0.00"
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="{StaticResource DangerBrush}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Action Bar -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ComboBox x:Name="StatusFilterComboBox"
                     Grid.Column="0"
                     Style="{StaticResource ModernComboBox}"
                     Width="150"
                     SelectionChanged="StatusFilterComboBox_SelectionChanged">
                <ComboBoxItem Content="All Status" IsSelected="True"/>
                <ComboBoxItem Content="Draft"/>
                <ComboBoxItem Content="Sent"/>
                <ComboBoxItem Content="Paid"/>
                <ComboBoxItem Content="Overdue"/>
            </ComboBox>

            <TextBox x:Name="SearchBox"
                    Grid.Column="2"
                    Style="{StaticResource ModernTextBox}"
                    Width="300"
                    HorizontalAlignment="Left"
                    TextChanged="SearchBox_TextChanged">
                <TextBox.Tag>
                    <TextBlock Text="Search invoices..."
                              Foreground="{StaticResource TextSecondaryBrush}"
                              IsHitTestVisible="False"
                              Margin="12,10"/>
                </TextBox.Tag>
            </TextBox>

            <Button Grid.Column="4"
                   Content="+ New Invoice"
                   Style="{StaticResource ModernButton}"
                   Click="NewInvoice_Click"/>
        </Grid>

        <!-- Invoice List -->
        <Border Grid.Row="3" Style="{StaticResource Card}">
            <Grid>
                <DataGrid x:Name="InvoicesGrid"
                         Style="{StaticResource ModernDataGrid}"
                         MouseDoubleClick="InvoicesGrid_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Invoice #" Binding="{Binding InvoiceNumber}" Width="Auto"/>
                        <DataGridTextColumn Header="Customer" Binding="{Binding Customer.Name}" Width="*"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding InvoiceDate, StringFormat=dd/MM/yyyy}" Width="Auto"/>
                        <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat=dd/MM/yyyy}" Width="Auto"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding TotalAmount, StringFormat=C}" Width="Auto"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                        <DataGridTemplateColumn Header="Actions" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Edit"
                                               Style="{StaticResource SecondaryButton}"
                                               Padding="8,4"
                                               Margin="0,0,5,0"
                                               Click="EditInvoice_Click"
                                               Tag="{Binding}"/>
                                        <Button Content="Delete"
                                               Style="{StaticResource SecondaryButton}"
                                               Padding="8,4"
                                               Click="DeleteInvoice_Click"
                                               Tag="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyState"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed">
                    <TextBlock Text="No invoices yet"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextSecondaryBrush}"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Click 'New Invoice' to create your first invoice"
                              FontSize="14"
                              Foreground="{StaticResource TextSecondaryBrush}"
                              HorizontalAlignment="Center"
                              Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
